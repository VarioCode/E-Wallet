<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/displayQrConstraintLayout"
        tools:context=".nav.gallery.slideshow.DisplayQrFragment">

    <ImageView
            android:id="@+id/idIVQrcode"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/ScanMeText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="120dp"/>

    <TextView
            android:text="SCAN ME"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/ScanMeText"
            android:textSize="30sp"
            android:gravity="center"
            app:fontFamily="sans-serif-black"
            app:textAllCaps="true"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toTopOf="@+id/CloseQRButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="135dp"
            android:layout_marginEnd="136dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/idIVQrcode"/>

    <Button
            android:text="CLOSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CloseQRButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/ScanMeText"
            android:layout_marginEnd="162dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>